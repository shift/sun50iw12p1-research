# HY300 H713 Projector U-Boot Configuration
# Based on H6 platform with USB serial gadget support for console access

# ARM64 and Sunxi Platform
CONFIG_ARM=y
CONFIG_ARCH_SUNXI=y
CONFIG_DEFAULT_DEVICE_TREE="sun50i-h713-hy300"
CONFIG_SPL=y
CONFIG_MACH_SUN50I_H6=y

# DRAM Configuration (DDR3-1600 from boot0 analysis)
CONFIG_SUNXI_DRAM_H6_DDR3=y
CONFIG_DRAM_CLK=792
CONFIG_DRAM_ZQ=3881977

# Storage Support
CONFIG_MMC=y
CONFIG_MMC_SUNXI=y
CONFIG_MMC0_CD_PIN=""
CONFIG_SUPPORT_EMMC_BOOT=y

# USB Host Support
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_XHCI_DWC3=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_DWC3=y

# USB Gadget Support for Serial Console
CONFIG_USB_GADGET=y
CONFIG_USB_GADGET_DWC2_OTG=y
CONFIG_USB_GADGET_DOWNLOAD=y
CONFIG_USB_FUNCTION_MASS_STORAGE=y
CONFIG_USB_FUNCTION_ACM=y
CONFIG_CMD_USB_MASS_STORAGE=y

# USB Serial Console (CDC ACM)
CONFIG_DM_USB_GADGET=y
CONFIG_USB_GADGET_MANUFACTURER="Allwinner"
CONFIG_USB_GADGET_VENDOR_NUM=0x1f3a
CONFIG_USB_GADGET_PRODUCT_NUM=0x1010

# Environment and Boot
CONFIG_ENV_IS_IN_MMC=y
CONFIG_SYS_MMC_ENV_DEV=0

# Console Configuration
CONFIG_CONSOLE_MUX=y

# PSCI Power Management
# CONFIG_PSCI_RESET is not set

# Disable malloc clear for faster boot
# CONFIG_SYS_MALLOC_CLEAR_ON_INIT is not set

# Command Support
CONFIG_CMD_GPIO=y
CONFIG_CMD_I2C=y
CONFIG_CMD_MMC=y
CONFIG_CMD_USB=y

# Device Drivers
CONFIG_DM=y
CONFIG_DM_GPIO=y
CONFIG_DM_I2C=y
CONFIG_DM_MMC=y
CONFIG_DM_SERIAL=y

# Serial Console (UART0)
CONFIG_CONS_INDEX=1
CONFIG_BAUDRATE=115200
